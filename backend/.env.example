# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=pxt

# JWT
JWT_SECRET=sua-chave-secreta-aqui-mude-em-producao

# Google Sheets API
GOOGLE_SHEETS_SPREADSHEET_ID=SEU_ID_DA_PLANILHA_AQUI
GOOGLE_SERVICE_ACCOUNT_EMAIL=seu-service-account@projeto.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nSUA_CHAVE_PRIVADA_AQUI\n-----END PRIVATE KEY-----\n"

# Sync Settings
# Se true, sincroniza TODAS as datas/abas disponíveis na planilha
# Se false (padrão), sincroniza APENAS a aba do dia atual (formato DD-MM)
# Recomendado: false para otimizar performance e uso de recursos
SYNC_ALL_DATES=false

# Server
PORT=3001

# CORS - Allowed Origins (comma separated)
# Para desenvolvimento local: http://localhost:5173
# Para produção: https://buscador.dev.buscadorpxt.com.br,https://buscador-frontend.dev.buscadorpxt.com.br
CORS_ORIGINS=http://localhost:5173

# Encryption
# Chave de criptografia AES-256 (deve ter pelo menos 32 caracteres)
ENCRYPTION_KEY=your-secret-encryption-key-change-in-production-2024
# Habilitar/desabilitar criptografia (true para produção, false para dev)
ENABLE_ENCRYPTION=false

# Cache Settings
# Intervalo em minutos para regenerar o cache de payload (recomendado: 5-10 minutos)
CACHE_REGENERATION_INTERVAL_MINUTES=5
# Diretório onde os arquivos de cache serão salvos (compatível com Docker)
CACHE_DIRECTORY=./cache
